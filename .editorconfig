
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab
indent_size = 2
tab_width = 2

[*.{js,ts,tsx,json,yaml,yml,md}]
indent_style = space
indent_size = 2

[*.{sh,py}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[**/node_modules/**]
ignore = true
